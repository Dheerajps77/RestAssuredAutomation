<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">
    <test verbose="2" preserve-order="true" name="SecurityTest">
        <classes>
            <class name="org.example.SecurityTest">
                <methods>
                    <include name="testAuthenticationRequired"/>
                    <include name="testAuthorization"/>
                    <include name="testSqlInjection"/>
                    <include name="testXssInjection"/>
                    <include name="testSensitiveDataExposure"/>
                    <include name="testRateLimiting"/>
                    <include name="testInputValidation"/>
                </methods>
            </class>
        </classes>
    </test>
</suite>